<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.samupc.appreperibilita.ui.MainActivityFragment.ListaImpiantiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
    >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="16dp"
            android:paddingStart="6dp"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:drawableStart="@drawable/ic_search_black_24dp"
            android:background="@drawable/round_textedit"
            android:hint="Search by Display Name"
            android:textSize="18sp"
            android:textColorHint="@color/searchHint"
            android:textColor="@color/searchText"
            android:fontFamily="sans-serif-light"
            android:id="@+id/te"
            android:layout_weight="1"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"

            >
        </EditText>

        <!--
        <include layout="@layout/user_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
            -->

        <ImageButton

            android:layout_weight="3"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/filter"

        />


    </LinearLayout>






</LinearLayout>
